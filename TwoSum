class Solution {
    public int[] twoSum(int[] nums, int target) {
        int[] ans=new int[2];
        Map<Integer,Integer> mp=new HashMap<>();
        for(int i=0;i<nums.length;i++){
            int comp=target-nums[i];
            //
            if(mp.containsKey(comp)){
                ans[0]=i;
                ans[1]=mp.get(comp);
                return ans;
            }
            else{
                mp.put(nums[i],i);
            }
        }
           return ans; 
       
    }
}
